backend:
  name: git-gateway
  branch: main

media_folder: "uploads"
public_folder: "/uploads"

collections:
  - name: "site"
    label: "Site Content"
    files:
      - file: "data/site.json"
        label: "Homepage Content"
        name: "homepage"
        fields:
          - { label: "Company Name", name: "companyName", widget: "string" }
          - { label: "Tagline", name: "tagline", widget: "string" }
          - { label: "Hero Kicker", name: "heroKicker", widget: "string" }
          - { label: "Hero Title", name: "heroTitle", widget: "string" }
          - { label: "Hero Sub", name: "heroSub", widget: "text" }

          - label: "Trust Pills"
            name: "trustPills"
            widget: "list"
            field: { label: "Pill", name: "pill", widget: "string" }

          - { label: "Phone (Display)", name: "phone", widget: "string" }
          - { label: "Phone (Digits only)", name: "phoneTel", widget: "string" }
          - { label: "Email", name: "email", widget: "string" }

          - label: "Address Lines"
            name: "addressLines"
            widget: "list"
            field: { label: "Line", name: "line", widget: "string" }

          - label: "Services"
            name: "services"
            widget: "list"
            field: { label: "Service", name: "service", widget: "string" }

          - label: "Materials"
            name: "materials"
            widget: "list"
            field: { label: "Material", name: "material", widget: "string" }

          - label: "Gallery"
            name: "gallery"
            widget: "list"
            fields:
              - { label: "Image", name: "image", widget: "image" }
              - { label: "Label", name: "label", widget: "string" }

          - label: "Reviews"
            name: "reviews"
            widget: "list"
            fields:
              - { label: "Name", name: "name", widget: "string" }
              - { label: "Text", name: "text", widget: "text" }
