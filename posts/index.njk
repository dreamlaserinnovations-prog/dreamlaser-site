---
layout: layouts/base.njk
title: All Posts
permalink: /posts/
---
<h1>All Posts</h1>

<div class="post-grid">
{% for post in collections.posts | reverse %}
  <a class="post-card" href="{{ post.url }}">
    {% if post.data.image %}
      <img class="post-card-img" src="{{ post.data.image }}" alt="{{ post.data.title }}">
    {% endif %}
    <div class="post-card-body">
      <h2 class="post-card-title">{{ post.data.title }}</h2>
      {% if post.data.excerpt %}
        <p class="post-card-excerpt">{{ post.data.excerpt }}</p>
      {% endif %}
      {% if post.data.date %}
        <p class="post-card-meta">{{ post.data.date | date("MMM d, yyyy") }}</p>
      {% endif %}
    </div>
  </a>
{% endfor %}
</div>
