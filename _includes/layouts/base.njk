<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% if title %}{{ title }} | {% endif %}{{ site.companyName or site.name }}</title>
  <meta name="description" content="{% if description %}{{ description }}{% elif excerpt %}{{ excerpt | safe }}{% else %}{{ site.description }}{% endif %}">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/blog.css">
</head>
<body class="site">
  <header class="site-header">
    <div class="container">
      <a class="brand" href="/">{{ site.companyName or site.name }}</a>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/posts/">Blog</a>
        <a href="/contact.html">Contact</a>
      </nav>
    </div>
  </header>

  <main class="site-main">
    <div class="container">
      {{ content | safe }}
    </div>
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>&copy; {{ "now" | date("yyyy") }} {{ site.companyName or site.name }}. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
