---
layout: layouts/base.njk
---
<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    {% if date %}
      <p class="post-meta">{{ date | date("MMMM d, yyyy") }}</p>
    {% endif %}
    {% if image %}
      <figure class="post-hero">
        <img src="{{ image }}" alt="{{ title }}">
      </figure>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <hr class="post-hr">
  <div class="post-cta">
    <h2>Request a Quote</h2>
    <p>Need precision laser engraving for your next project? <a href="/contact.html">Contact us</a> for a fast, professional quote.</p>
  </div>
</article>
